.m-poplayer {
  width: 500px;
  height: 360px;
  box-sizing: border-box;

  .zbar {
    border: none;
    height: 50px;
    background: transparent;
    cursor: move;
  }

  .zcls {
    font-size: 20px;
    color: #666;
    top: 15px;
    right: 10px;
    text-align: center;
    border: 1px solid transparent;
    border-radius: 100%;
    padding: 5px;

    &:hover {
      border-color: #666;
    }
  }
}

.m-poplayer-mask {
  background: rgba(0, 0, 0, 0.3);
}
